<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 이미지 로드 -->
    <declare-styleable name="ImageLoadView">
        <attr name="url" format="string" />
        <attr name="placeholder" format="reference" />
        <attr name="error" format="reference" />
        <attr name="style" format="enum">
            <enum name="normal" value="0" />
            <enum name="circle" value="1" />
            <enum name="round" value="2" />
        </attr>
        <attr name="corner" format="dimension" />
    </declare-styleable>

    <!-- 헤더 -->
    <declare-styleable name="HeaderView">
        <attr name="title" format="string" />
        <attr name="finishType" format="enum">
            <enum name="back" value="0" />
            <enum name="close" value="1" />
        </attr>
        <attr name="android:background" />
        <attr name="android:textColor" />

        <!--        <attr name="textOption" format="string" />-->
        <!--        <attr name="leftOption" format="reference" />-->
        <!--        <attr name="rightOption" format="reference" />-->
    </declare-styleable>

    <!-- 에디트 -->
    <declare-styleable name="EditTextView">
        <attr name="android:text" />
        <attr name="android:maxLines" />
        <attr name="android:inputType" />
        <attr name="android:imeOptions" />
        <attr name="label" format="reference" />
        <attr name="description" format="reference" />
        <attr name="optionText" format="reference" />
        <attr name="focus" format="boolean" />
        <attr name="mode" format="enum">
            <enum name="normal" value="0" />
            <enum name="disable" value="1" />
        </attr>
        <attr name="valid" format="enum">
            <enum name="normal" value="0" />
            <enum name="email" value="1" />
            <enum name="password" value="2" />
        </attr>

    </declare-styleable>
</resources>
